{% extends "layout.twig" %}
{% block content %}

<main class="account_page">
    <span class="separation titre d-flex flex-column">
        <img src="../assets/icons/account.svg">
        <h2>Compte client</h2>
        <a href="#" class="logout">Se déconnecter ?</a>
    </span>

    <div class="parent_div">
        <div class="wrapper row">

            <div class="box col-lg-4 col-sm-12">
                <h4>Compte</h4>

                <div id="account_infos" class="display_and_form">
                    <span id="email" data-label="Adresse email">{{ user.email }}</span>
                    <span id="password" data-label="Mot de passe (obligatoire)" data-type="password">************</span>
                    <span id="new_password" data-label="Nouveau mot de passe (option)" data-validate="false" data-type="password"></span>
                </div>
            </div>

            <div class="box col-lg-4 col-sm-12">
                <h4>Adresse</h4>

                <div id="client_infos" class="display_and_form">
                    <span id="firstname" class="inline" data-label="Prénom">{{ client.firstname }}</span>
                    <span id="lastname" data-label="Nom">{{ client.lastname }}</span>

                    <span id="address" data-label="Adresse">{{ client.address }}</span>

                    <span id="cp" class="inline" data-label="Code postal">{{ client.postalcode }}</span>
                    <span id="city" data-label="Ville">{{ client.city }}</span>
                </div>
            </div>

            <div class="box col-lg-4 col-sm-12">
               <h4>Commandes</h4>

               <div id="command_infos">
                    <span id="done">{{ nb_orders }} commandes réalisées</span>
                    <span id="processing">{{ nb_processed_orders }} commande en cours de traitement</span>
                    <span id="received">{{ nb_received_orders }} commandes réceptionnées</span>
                </div>
            </div>
        </div>
        
        {% if error != null %}
            <label class="backend_error">{{ error }}</label>
        {% endif %}
        
        <button class="set_to_form">Modifier</button>
    </div>

</main>

{% endblock %}
